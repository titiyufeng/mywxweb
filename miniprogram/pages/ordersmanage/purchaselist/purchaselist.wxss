/* miniprogram/pages/ordersmanage/purchaselist/purchaselist.wxss */
@import '../../../style/weui.wxss';
page {
  background: #f5f5f5;
}

/*总体主盒子*/

.container {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #939393;
}

.nav_right {
  /*设置行内块级元素（没使用定位）*/
  position: fixed;
  box-sizing: border-box;
  right: 0;
  top: 0;
  padding: 5px;
  width: 100%;
  height: 95%;
  /*主盒子设置背景色为灰色*/
  background: #fff;
}

/*右侧栏list的item*/

.nav_right .nav_right_items {
  /*浮动向左*/
  float: left;
  /*每个item设置宽度是100%*/
  width: 100%;
  padding: 5px;
  text-align: left;
}

.nav_right .nav_right_items image {
  /*被图片设置宽高*/
  width: 120px;
  height: 120px;
  float: left; /*使右侧的商品说明文字与图片为同一行*/
  margin-right: 5px;
  background: #dedede;
}

.nav_right .nav_right_items text {
  /*给text设成块级元素*/
  display: -webkit-box;
  font-size: 15px;
  color: black;
  line-height: 15px;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3; /*控制显示行数*/
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 3px;
}

.nodata_text {
  margin-top: 180px;
  color: black;
  font-size: 16px;
  text-align: center;
}

/*点击商品列表页面的时候，背景色为白色*/

.navigator-hover {
  background: #fff;
}

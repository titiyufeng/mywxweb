<!--pages/search/search.wxml-->
<view class="container">

  <view class='page_row' >
    <view class="search">
      <view class="df search_arr">
        <icon class="searchcion" size='20' type='search'></icon>
        <input class="input" name="keyword" placeholder="{{searchtext}}" bindinput ="searchtextInput"/>
      </view>
    </view>
    <view class='sousuo' bindtap="getdata">搜索</view>
  </view>

  
  
  <!--搜索结果列表-->
  <scroll-view  scroll-y scroll-with-animation  class="nav_right" scroll-top='{{topNum}}'>
    <!--如果有数据，才遍历项-->
    <view wx:if="{{cateItems[curIndex].is_have_child}}">
      <block wx:for="{{right_goodslist}}" wx:key="id">
        <view class="nav_right_items">
        <!--界面跳转 -->
          <navigator url="/pages/detail/detail?=cate_id{{item.cate_id}}&spu_no={{item.spu_no}}&goods_name={{item.goods_name}}&goods_detail={{item.goods_detail}}&detail_images={{item.detail_images}}&wechat_id={{wechat_id}}&wechat_name={{wechat_name}}">
            <image src="cloud://mywxweb-e946c5.6d79-mywxweb-e946c5/goods_images/{{item.cate_id}}/{{item.spu_no}}/{{item.spu_no}}.jpg"></image>
            <text>
               名称：{{item.goods_name}}
            </text>
            <text>
               价格：{{item.price}}
            </text>
          </navigator>
        </view>
      </block>
    </view>

    <!--如果无数据，则显示数据-->
    <view class="nodata_text" wx:else>该分类暂无商品</view>
    
  </scroll-view>


</view>